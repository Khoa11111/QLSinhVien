<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/img_sv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#57c1db"
                android:scaleType="centerCrop"
                android:src="@drawable/boy_icon" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_masv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/cv_sv"
            android:text="ma sinh vien"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_tensv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_masv"
            android:layout_margin="2dp"
            android:layout_toEndOf="@+id/cv_sv"
            android:text="ten sinh vien"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_emailsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tensv"
            android:layout_margin="2dp"
            android:layout_toEndOf="@+id/cv_sv"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:src="@drawable/delete_icon" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/img_delete"
            android:src="@drawable/pecil_icon" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>