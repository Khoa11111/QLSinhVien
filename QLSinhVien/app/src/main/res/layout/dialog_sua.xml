<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Cập nhập Sinh Viên"
        android:textColor="#FF00"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtName_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerInParent="true"
        android:ems="15"
        android:hint="Tên Sinh viên"
        android:textColor="#706B6B" />

    <EditText
        android:id="@+id/txtGT_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName_update"
        android:layout_centerInParent="true"
        android:ems="15"
        android:hint="Giới Tính(0:nam,1:nữ)"
        android:textColor="#706B6B" />

    <EditText
        android:id="@+id/txtEmail_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtGT_update"
        android:layout_centerInParent="true"
        android:ems="15"
        android:hint="Email Sinh viên"
        android:textColor="#706B6B" />

    <Button
        android:id="@+id/btn_XacNhan_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail_update"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#57c1db"
        android:text="Xác Nhận" />

    <Button
        android:id="@+id/btn_Huy_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail_update"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/btn_XacNhan_update"
        android:backgroundTint="#57c1db"
        android:text="Hủy" />

</RelativeLayout>